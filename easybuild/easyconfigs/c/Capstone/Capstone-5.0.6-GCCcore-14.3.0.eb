easyblock = 'CMakeMake'

name = 'Capstone'
version = '5.0.6'

homepage = 'http://www.capstone-engine.org'
description = """Capstone disassembly/disassembler framework for ARM, ARM64 (ARMv8), Alpha, BPF, Ethereum VM, HPPA,
LoongArch, M68K, M680X, Mips, MOS65XX, PPC, RISC-V(rv32G/rv64G), SH, Sparc, SystemZ, TMS320C64X, TriCore, Webassembly,
XCore and X86."""

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}

source_urls = ['https://github.com/capstone-engine/capstone/archive/']
sources = ['%(version)s.tar.gz']
checksums = ['240ebc834c51aae41ca9215d3190cc372fd132b9c5c8aa2d5f19ca0c325e28f9']

builddependencies = [
    ('binutils', '2.44'),
    ('CMake', '4.0.3'),
]

configopts = '-DBUILD_SHARED_LIBS=ON'

runtest = 'test'

sanity_check_paths = {
    'files': ['bin/cstool', 'lib/libcapstone.a', f'lib/libcapstone.{SHLIB_EXT}'],
    'dirs': [],
}

sanity_check_commands = ['cstool -h']

moduleclass = 'tools'
