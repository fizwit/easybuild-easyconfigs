easyblock = 'CMakeMake'

name = 'CLI11'
version = '2.5.0'

homepage = 'https://github.com/CLIUtils/CLI11'
description = """
CLI11 is a command line parser for C++11 and beyond that provides
 a rich feature set with a simple and intuitive interface.
"""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['https://github.com/CLIUtils/CLI11/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['17e02b4cddc2fa348e5dbdbb582c59a3486fa2b2433e70a0c3bacb871334fd55']

builddependencies = [
    ('binutils', '2.42'),
    ('CMake', '3.29.3'),
]

sanity_check_paths = {
    'files': [],
    'dirs': ['include/CLI', 'share'],
}

moduleclass = 'lib'
