easyblock = 'PythonBundle'

name = 'cclib'
version = '1.8.1'

homepage = 'https://cclib.github.io/'

description = """
 cclib is a Python library that provides parsers for computational chemistry log files.
 It also provides a platform to implement algorithms in a package-independent manner.
"""

toolchain = {'name': 'foss', 'version': '2023b'}

builddependencies = [
    ('poetry', '1.7.1'),
]

dependencies = [
    ('Python', '3.11.5'),
    ('SciPy-bundle', '2023.11'),
]

exts_list = [
    ('periodictable', '1.7.1', {
        'checksums': ['43d7db7233d6b33962f83d79ea54f47c3b923d3e83403cbc03f58f353af4b52c'],
    }),
    (name, version, {
        'patches': ['cclib-1.8.1_versionfix.patch'],
        'checksums': [
            {'cclib-1.8.1.tar.gz': 'd10aa2352479fcdaa86cc32055a8ae7f98ce26523ea928944ab2256f0875d605'},
            {'cclib-1.8.1_versionfix.patch': 'd81580303ebaabaf6f67242ffd4f667d58678d88ff0f5581a437bdee3f02622e'},
        ],
    }),
]

_bins = ['ccframe', 'ccget', 'ccwrite', 'cda']

sanity_check_paths = {
    'files': ['bin/%s' % x for x in _bins],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

sanity_check_commands = ['%s --help' % x for x in _bins]

moduleclass = 'chem'
