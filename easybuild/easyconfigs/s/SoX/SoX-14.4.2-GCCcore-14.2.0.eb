easyblock = 'ConfigureMake'

name = 'SoX'
version = '14.4.2'

homepage = 'http://sox.sourceforge.net/'
docurls = 'http://sox.sourceforge.net/Docs/Documentation'
description = """Sound eXchange, the Swiss Army knife of audio manipulation"""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

source_urls = [SOURCEFORGE_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
patches = ['SoX-%(version)s_include_math.patch']
checksums = [
    {'sox-14.4.2.tar.gz': 'b45f598643ffbd8e363ff24d61166ccec4836fea6d3888881b8df53e3bb55f6c'},
    {'SoX-14.4.2_include_math.patch': 'f92e663483946a71612e3324c159a0d418d1b7a32c6c9683212a4e792e20bf09'},
]

builddependencies = [('binutils', '2.42')]

dependencies = [
    ('FLAC', '1.5.0'),
    ('LAME', '3.100'),
    ('libmad', '0.15.1b'),
    ('libvorbis', '1.3.7'),
    ('FFmpeg', '7.1.1'),
]

sanity_check_paths = {
    'files': ['bin/play', 'bin/rec', 'bin/sox', 'bin/soxi', 'include/sox.h',
              'lib/libsox.la', 'lib/libsox.a', 'lib/pkgconfig/sox.pc', 'lib/libsox.%s' % SHLIB_EXT],
    'dirs': ['bin', 'include', 'lib', 'lib/pkgconfig', 'share/man'],
}

sanity_check_commands = ['sox --help']

moduleclass = 'data'
