easyblock = 'Tarball'

name = 'AptaSUITE'
version = '0.9.8'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://github.com/drivenbyentropy/aptasuite'
description = """A full-featured bioinformatics software collection for
the comprehensive analysis of aptamers in HT-SELEX experiments."""

toolchain = SYSTEM

github_account = 'drivenbyentropy'
source_urls = [GITHUB_LOWER_RELEASE]
sources = ['%(namelower)s-%(version)s.zip']
checksums = ['aa940f239d19f7c803924a45008f3faa5936af8ef391930d2e6ad3ca2f27ab90']

dependencies = [
    ('Java', '17', '', SYSTEM),
]

postinstallcmds = [
    "ln -s %(namelower)s-%(version)s.jar %(installdir)s/%(namelower)s.jar",
]

sanity_check_paths = {
    'files': ['%(namelower)s-%(version)s.jar', '%(namelower)s.jar'],
    'dirs': ['lib'],
}

modloadmsg = "To execute %(namelower)s, run: java -jar $EBROOTAPTASUITE/%(namelower)s.jar"

moduleclass = 'bio'
