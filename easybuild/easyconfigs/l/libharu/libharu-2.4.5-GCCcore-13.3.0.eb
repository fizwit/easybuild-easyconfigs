easyblock = 'CMakeMake'

name = 'libharu'
version = '2.4.5'

homepage = 'http://libharu.org/'
description = """libHaru is a free, cross platform, open source library for generating PDF files."""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

source_urls = ['https://github.com/libharu/libharu/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['0ed3eacf3ceee18e40b6adffbc433f1afbe3c93500291cd95f1477bffe6f24fc']

builddependencies = [
    ('CMake', '3.29.3'),
    ('binutils', '2.42'),
]

dependencies = [('libpng', '1.6.43')]

maxparallel = 1

sanity_check_paths = {
    'files': ['lib/libhpdf.%s' % SHLIB_EXT],
    'dirs': ['share/libharu/bindings', 'include', 'lib']
}

moduleclass = 'lib'
