easyblock = 'CMakeMake'

name = 'libdeflate'
version = '1.20'

homepage = 'https://github.com/ebiggers/libdeflate'
description = """Heavily optimized library for DEFLATE/zlib/gzip compression and decompression."""

toolchain = {'name': 'GCCcore', 'version': '13.3.0'}

github_account = 'ebiggers'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
patches = ['libdeflate-1.20_fix-aarch64_build_issue.patch']
checksums = [
    {'v1.20.tar.gz': 'ed1454166ced78913ff3809870a4005b7170a6fd30767dc478a09b96847b9c2a'},
    {'libdeflate-1.20_fix-aarch64_build_issue.patch':
     'a0a7261c19a4af0543cff471105e12393464abe7ae75874fad5010c76a193087'},
]

builddependencies = [
    ('binutils', '2.42'),
    ('CMake', '3.29.3'),
]

sanity_check_paths = {
    'files': [
        'bin/%(name)s-gunzip', 'bin/%(name)s-gzip',
        'lib/%(name)s.a', 'lib/%%(name)s.%s' % SHLIB_EXT,
        'include/%(name)s.h',
    ],
    'dirs': [],
}
sanity_check_commands = [
    '%(name)s-gzip -h',
    '%(name)s-gunzip -h',
]

moduleclass = 'system'
