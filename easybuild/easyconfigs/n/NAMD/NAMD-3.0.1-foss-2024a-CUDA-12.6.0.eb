name = 'NAMD'
version = '3.0.1'
versionsuffix = '-CUDA-%(cudaver)s'

homepage = 'https://www.ks.uiuc.edu/Research/namd/'
description = """NAMD is a parallel molecular dynamics code designed for high-performance simulation of
 large biomolecular systems."""

toolchain = {'name': 'foss', 'version': '2024a'}
toolchainopts = {'usempi': False, 'openmp': False, 'pic': True}

source_urls = [
    'https://www.ks.uiuc.edu/Research/%(namelower)s/%(version)s/download/453167/',
]
sources = ['NAMD_%(version)s_Source.tar.gz']

patches = ['NAMD-3.0_fix_hwloc_build.patch']

checksums = [
    {'NAMD_3.0.1_Source.tar.gz': '3be0854545c45e58afb439a96708e127aef435d30113cc89adbab8f4b6888733'},
    {'NAMD-3.0_fix_hwloc_build.patch': '03f7caa4027604e0483a9b149ebb5de310653a2aad99403faf3359ccc0015f02'},
]

# /bin/csh is required by 'config' script
builddependencies = [
    ('tcsh', '6.24.13'),
    ('Autotools', '20231222'),
]
dependencies = [
    ('Tcl', '8.6.14'),
    ('CUDA', '12.6.0', '', SYSTEM),
]

charm_arch = 'multicore-linux-%(arch)s'
charm_extra_cxxflags = '-fpermissive'

moduleclass = 'chem'
