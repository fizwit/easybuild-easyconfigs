builddependencies = [
    ('CMake', '3.29.3'),
    ('hatchling', '1.24.2'),
]

dependencies = [
    ('Python', '3.12.3'),
    ('SciPy-bundle', '2024.05'),
]

preinstallopts = "sed -i -e '/nvidia-nccl-cu12/d' pyproject.toml && "

