easyblock = 'PythonPackage'

name = 'PyGObject'
version = '3.54.2'

homepage = 'https://pygobject.readthedocs.io/'
description = """PyGObject is a Python package which provides bindings for GObject based
libraries such as GTK, GStreamer, WebKitGTK, GLib, GIO and many more."""

toolchain = {'name': 'GCCcore', 'version': '14.2.0'}

sources = ['%(namelower)s-%(version)s.tar.gz']
checksums = ['03cffeb49d8a1879b621d8f606ac904218019a0ae699b1cd3780a8ee611e696b']

builddependencies = [
    ('binutils', '2.42'),
    ('pkgconf', '2.3.0'),
    ('meson-python', '0.18.0'),
    ('Ninja', '1.12.1'),
]

dependencies = [
    ('Python', '3.13.1'),
    ('GLib', '2.85.1'),
    ('GObject-Introspection', '1.84.0'),
    ('PyCairo', '1.28.0'),
]

sanity_check_paths = {
    'files': ['include/python%(pyshortver)s/PyGObject/pygobject-%(version_major)s.0/pygobject.h'],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

options = {'modulename': 'gi'}

moduleclass = 'vis'
