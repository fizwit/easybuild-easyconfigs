easyblock = 'MesonNinja'

name = 'GST-plugins-base'
version = '1.27.2'

homepage = 'https://gstreamer.freedesktop.org/'
description = """GStreamer is a library for constructing graphs of media-handling
 components. The applications it supports range from simple
 Ogg/Vorbis playback, audio/video streaming to complex audio
 (mixing) and video (non-linear editing) processing."""

toolchain = {'name': 'GCC', 'version': '14.2.0'}

source_urls = ['https://gstreamer.freedesktop.org/src/gst-plugins-base']
sources = [SOURCELOWER_TAR_XZ]
checksums = ['6f530a0eac4fe3a8e5487c3eea7b1fac307e2a21f056d9b41747818a88be4bf6']

builddependencies = [
    ('Meson', '1.6.1'),
    ('Ninja', '1.12.1'),
    ('GObject-Introspection', '1.84.0'),
    ('gettext', '0.24'),
    ('pkgconf', '2.3.0'),
    ('Bison', '3.8.2'),
]

dependencies = [
    ('zlib', '1.3.1'),
    ('GLib', '2.85.1'),
    ('GStreamer', '1.26.5'),
    ('Gdk-Pixbuf', '2.42.12'),
    ('X11', '20250521'),
    ('Mesa', '25.1.3'),
    ('Graphene', '1.10.8'),
]

sanity_check_paths = {
    'files': ['bin/gst-%s-1.0' % x for x in ['discoverer', 'play', 'device-monitor']] +
             ['lib/libgst%s-1.0.%s' % (x, SHLIB_EXT) for x in ['app', 'audio', 'video']],
    'dirs': ['include', 'share']
}

moduleclass = 'vis'
