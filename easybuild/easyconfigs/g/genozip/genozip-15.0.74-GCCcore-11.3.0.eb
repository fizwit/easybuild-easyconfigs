easyblock = 'ConfigureMake'

name = 'genozip'
version = '15.0.74'

homepage = 'https://genozip.com'
description = "Genozip is a compressor for genomic files - it compresses FASTQ, SAM/BAM/CRAM, VCF, FASTA and others."

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}

source_urls = ['https://github.com/divonlan/genozip/archive/refs/tags/']
sources = ['%(name)s-%(version)s.tar.gz']
checksums = ['39db5e1e46517b7b511467d24150243c4aacd5f9db74455955c4e3496fb92f7c']

builddependencies = [
    ('NASM', '2.15.05'),
    ('binutils', '2.38')
]

skipsteps = ['configure']

installopts = 'PREFIX=%(installdir)s'

sanity_check_paths = {
    'files': ['bin/genocat', 'bin/genozip', 'bin/genounzip', 'bin/genols'],
    'dirs': ['bin'],
}

sanity_check_commands = ['genozip --version', 'genozip --help']

moduleclass = 'bio'
