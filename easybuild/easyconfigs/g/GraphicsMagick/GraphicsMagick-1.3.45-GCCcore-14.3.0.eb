easyblock = 'ConfigureMake'

name = 'GraphicsMagick'
version = '1.3.45'

homepage = 'http://www.graphicsmagick.org/'
description = "GraphicsMagick is the swiss army knife of image processing."

toolchain = {'name': 'GCCcore', 'version': '14.3.0'}
toolchainopts = {'pic': True}

source_urls = [
    SOURCEFORGE_SOURCE,
    'ftp://ftp.%(namelower)s.org/pub/%(name)s/%(version_major_minor)s/',
]
sources = [SOURCE_TAR_XZ]
patches = ['%(name)s-12.3.0_pkgconfig_libtiff-4.patch']
checksums = [
    {SOURCE_TAR_XZ: 'dcea5167414f7c805557de2d7a47a9b3147bcbf617b91f5f0f4afe5e6543026b'},
    {'%(name)s-12.3.0_pkgconfig_libtiff-4.patch': 'f3f900bcc4797f12ff3e2df0fc9eb67c0cc4e532531e200b8d283988f298fa48'},
]

builddependencies = [
    ('binutils', '2.44'),
    ('Autotools', '20250527'),
]
dependencies = [
    ('X11', '20250608'),
    ('bzip2', '1.0.8'),
    ('freetype', '2.13.3'),
    ('libpng', '1.6.50'),
    ('libjpeg-turbo', '3.1.1'),
    ('LibTIFF', '4.7.0'),
    ('libxml2', '2.14.3'),
    ('XZ', '5.8.1'),
    ('zlib', '1.3.1'),
    ('Ghostscript', '10.05.1'),
]

configopts = "--enable-shared --enable-static"


sanity_check_paths = {
    'files': ['bin/gm', 'lib/libGraphicsMagick.a', 'lib/libGraphicsMagick++.a', 'lib/libGraphicsMagickWand.a', 'lib/libGraphicsMagick.so', 'lib/libGraphicsMagick++.so', 'lib/libGraphicsMagickWand.so'],
    'dirs': ['include/%(name)s', 'lib/pkgconfig'],
}

sanity_check_commands = ["grep 'libtiff-4' %(installdir)s/lib/pkgconfig/%(name)s.pc"]

modextrapaths = {'CPP_HEADERS': ['include/%(name)s']}

moduleclass = 'vis'
