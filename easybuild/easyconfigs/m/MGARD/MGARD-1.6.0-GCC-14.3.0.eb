easyblock = 'CMakeMake'

name = 'MGARD'
version = '1.6.0'

homepage = 'https://github.com/CODARcode/MGARD'
description = """MGARD (MultiGrid Adaptive Reduction of Data) is a technique for multilevel lossy compression and
refactoring of scientific data based on the theory of multigrid methods"""

toolchain = {'name': 'GCC', 'version': '14.3.0'}

source_urls = ['https://github.com/CODARcode/MGARD/archive/refs/tags/']
sources = ['%(version)s.tar.gz']
checksums = ['06b1b2839a1794ec006db8f86683189bdd974e0404167ff3fc3705f0af02de4e']

builddependencies = [
    ('CMake', '4.0.3'),
    ('pkgconf', '2.4.3'),
    ('Catch2', '3.11.0'),
    ('TCLAP', '1.2.5'),
]

dependencies = [
    ('zlib', '1.3.1'),
    ('zstd', '1.5.7'),
    ('protobuf', '31.1'),
]

configopts = ' '.join([
    '-DMGARD_ENABLE_OPENMP=ON',
    '-DMGARD_ENABLE_CLI=ON',
])

runtest = 'tests'

sanity_check_paths = {
    'files': ['bin/mgard'],
    'dirs': [],
}

sanity_check_commands = ['mgard -h']

moduleclass = 'tools'
