easyblock = 'CMakeMake'

name = 'maeparser'
version = '1.3.3'

homepage = 'https://github.com/schrodinger/maeparser'
description = "maeparser is a parser for Schrodinger Maestro files."

toolchain = {'name': 'gompi', 'version': '2023b'}

source_urls = ['https://github.com/schrodinger/maeparser/archive/']
sources = ['v%(version)s.tar.gz']
checksums = ['78e7571a779ea4952e752ecef57c62fb26463947e29ef7f4b31b11988d88ca07']

builddependencies = [
    ('CMake', '3.27.6'),
]

dependencies = [('Boost', '1.83.0')]

sanity_check_paths = {
    'files': ['lib/libmaeparser.%s' % SHLIB_EXT],
    'dirs': ['include/maeparser', 'lib/cmake'],
}

moduleclass = 'tools'
